    </head>
    <body>

        <nav class="navbar navbar-default">

            <div class="container-fluid">

                <div class="navbar-header">

                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collap" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="/"><i class="fas fa-fire"></i></i>Hi,<%=file.emp_name%></a>

                </div>

                <div class="collapse navbar-collapse" id="collap">

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/employee/lagout"><i class="fas fa-sign-out-alt"></i>LogOut</a></li>
                    </ul>

                </div>


            </div>

        </nav>


<div class="container">




<h2 style="text-align:center;">Change Password !!!</h2>

<div style="width:25%; margin:25 auto;">


     <!-- Start Form -->

    <form action="/changep" method="POST">

        <div class="form-group">
            <label>Current Password:</label>
            <input class="form-control" type="text" name="current_p" placeholder="current password" required="current password">
        </div>

        <div class="form-group">
            <label> New Password:</label>
            <input class="form-control" type="text" placeholder="New Password" name="new_p" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
        </div>  

        <div class="form-group">
            <label>Confirm Password:</label>
            <input class="form-control" type="text" name="retype" placeholder="retype new password" required="retype new password">
        </div>
        
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Reset</button>

        </div>
        <h5><%=massage%></h5>
        




    </form>

    <!-- End Form -->


</div>

</div>

</body>

</html>
