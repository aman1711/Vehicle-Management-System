<h2 style="text-align:center;">Add new Employee</h2>

<div style="width:25%; margin:25 auto;">


     <!-- Start Form -->

    <form action="/employees/new" method="POST">

        <div class="form-group">
            <label>ID</label>
            <input class="form-control" type="text" name="emp_id" placeholder="employee_id" required="employee_id">
        </div>

        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="emp_name" placeholder="name" required="name">
        </div>

        <div class="form-group">
            <label>Password:</label>
            <input class="form-control" type="text" name="password" placeholder="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
        </div>

        <div class="form-group">
            <label>Age</label>
            <input class="form-control" type="number" name="age" placeholder="age" required="age">
        </div>

        <div class="form-group">
            <label>Permanent Address</label>          
            <textarea rows="4" cols="23" class="form-control" type="text" name="address" placeholder="address" required="address">            
            </textarea>
        </div>

        <div class="form-group">
                <label for="sel1">Post:</label>
                <select class="form-control" id="sel1" name="post_id">
                  <option value="dri">Driver</option>
                  <option value="maint">Maintainer</option>
                  <option value="sup">Supervisor</option>
                </select>
        </div>     
        
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        




    </form>

