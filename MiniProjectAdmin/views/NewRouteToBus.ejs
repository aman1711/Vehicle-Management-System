<div class="container">




<h2 style="text-align:center;">Add Route To <%=bus %></h2>

<div style="width:25%; margin:25 auto;">


     <!-- Start Form -->

    <form action="/buses/<%= bus%>/new" method="POST">

        <div class="form-group">
            <input class="form-control" type="time" name="time_arrival" placeholder="Arrival Time">
        </div>

        <div class="form-group">
            <input class="form-control" type="time" name="time_departure" placeholder="Departure Time">
        </div> 

        <div class="form-group">
            <input class="form-control" type="text" name="route_id" placeholder="Route Id">
        </div> 

        <div class="form-group">
            <input class="form-control" type="text" name="fare" placeholder="Fare">
        </div>  

        <label>Days on which vehicle will ply:</label>

        <div class="form-group">
            <input name="day[0]" type="hidden" value="0">
            <input name="day[1]" type="hidden" value="0">
            <input name="day[2]" type="hidden" value="0"> 
            <input name="day[3]" type="hidden" value="0">
            <input name="day[4]" type="hidden" value="0">
            <input name="day[5]" type="hidden" value="0">  
            <input name="day[6]" type="hidden" value="0">  

            <label class="checkbox"><input name="day[0]" type="checkbox" value="1">Sunday</label>
            <label class="checkbox"><input name="day[1]" type="checkbox" value="1">Monday</label>
            <label class="checkbox"><input name="day[2]" type="checkbox" value="1">Tuesday</label>
            <label class="checkbox"><input name="day[3]" type="checkbox" value="1">Wednesday</label>
            <label class="checkbox"><input name="day[4]" type="checkbox" value="1">Thursday</label>
            <label class="checkbox"><input name="day[5]" type="checkbox" value="1">Friday</label>
            <label class="checkbox"><input name="day[6]" type="checkbox" value="1">Saturday</label>
        </div>

        <p><%=message %></p>
        
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>


    </form>

    <!-- End Form -->


</div>

</div>

</body>

</html>
