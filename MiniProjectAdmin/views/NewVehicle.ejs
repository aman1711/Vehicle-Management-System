<div class="container">




<h2 style="text-align:center;">Add new Vehicle</h2>

<div style="width:25%; margin:25 auto;">


     <!-- Start Form -->

    <form action="/vehicles/new" method="POST">

        <div class="form-group">
            <input class="form-control" type="text" name="vehicle_id" placeholder="Vehicle Id">
        </div>

        <div class="form-group">
            <input class="form-control" type="text" name="vehicle_no" placeholder="Vehicle No">
        </div>

        <div class="form-group">
                <label for="sel1">Vehicle Type:</label>
                <select class="form-control" id="sel1" name="v_code">
                  <option value="bus">Bus</option>
                  <option value="car">Car</option>
                  <option value="bike">Bike</option>
                </select>
        </div>

        <div class="form-group">
                <input class="form-control" type="text" name="about" placeholder="Description">
        </div>
        
        <div class="form-group">
                <input class="form-control" type="text" name="max_seats" placeholder="No. of seats">        

        </div>
        
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        




    </form>

