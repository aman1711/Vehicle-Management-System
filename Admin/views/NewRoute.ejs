<div class="container">




<h2 style="text-align:center;">Add new Route</h2>

<div style="width:25%; margin:25 auto;">


     <!-- Start Form -->

    <form action="/routes/new" method="POST">

        <div class="form-group">
            <input class="form-control" type="text" name="route_id" placeholder="Route Id" required>
        </div>

        <div class="form-group">
                <label for="sel1">Source:</label>
                <select class="form-control" id="sel1" name="source">
                    <% cities.forEach(city=>{ %>
                  <option value="<%=city.city_name %>"><%=city.city_name %></option>
                  <%}) %>
                </select>
        </div>     

        <div class="form-group">
                <label for="sel1">Destination:</label>
                <select class="form-control" id="sel1" name="destination">
                        <% cities.forEach(city=>{ %>
                            <option value="<%=city.city_name %>"><%=city.city_name %></option>
                            <%}) %>
                </select>
        </div>     

        <p><%= message %></p>
        
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        
    </form>

    <!-- End Form -->


